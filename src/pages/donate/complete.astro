---
import App from '@layouts/App.astro';
import { Image } from 'astro:assets';
import FCLogo from '@images/Footer.png';
---

<App title="FFC - Donation Complete">
  <main class="flex flex-col items-center py-16">
    <!-- Logo -->
    <div class="container flex justify-center items-center mb-8">
      <Image
        src={FCLogo}
        alt="Forest Cup"
        width={800}
        loading="eager"
        format="webp"
        quality={1}
      />
    </div>

    <!-- Message -->
    <section class="text-center max-w-lg px-4">
      <h1 class="text-4xl font-bold text-green-600 mb-4">
        Thank You for Your Support!
      </h1>
      <p class="text-gray-200 mb-6">
        Your donation helps us organize better tournaments and grow the Forestian football community. We truly appreciate your contribution!
      </p>
      <a
        href="/"
        class="inline-block px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg shadow-lg transition-all duration-300"
      >
        Back to Home
      </a>
    </section>
  </main>
</App>