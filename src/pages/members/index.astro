---
import Home from '@components/Home.astro';
import App from '@layouts/App.astro';
import { getCollection } from 'astro:content';

// const members = await getCollection('members');
const members = (await getCollection('members'))
  .filter(entry => entry.data.verified)  
  .sort((a, b) => a.data.id - b.data.id)
  .map((entry) => ({
    ...entry.data,
    slug: entry.slug,
}));
import MemberCard from '@components/MemberCard.astro';
---

<App title="FFC - Members">
  <main class="flex flex-col items-center">
    <div class="flex flex-col items-center w-full max-w-8xl justify-center p-6">
    <h1 class="text-7xl font-bold p-6 mb-12">Official Members</h1>
      <div class="grid grid-custom xs:w-full gap-4">
        {members.map(member => {
            const { slug } = member;
            const { name, code, flagPath, logoPath } = member;
            return (
              <MemberCard
                name={name}
                code={code}
                flagPath={flagPath}
                logoPath={logoPath}
                slug={slug}
              />
            );
          })}
      </div>
    </div>
  </main>
</App>

<style>
  .grid-custom {
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
  }

</style>
