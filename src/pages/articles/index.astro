---
import App from '@layouts/App.astro';
import ArticleCard from '@components/articles/ArticleCard.astro';
import { getArticles } from '@lib/collections';
import { ROUTES } from '@config/routes';
import Title from '@components/Title.astro';

const articles = await getArticles();
articles.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---
<App title="FFC - Articles">
  <div class="container mx-auto px-4 py-8">
    <Title slideIn={true}>
      Articles & News
      <span slot="subtitle">Everything you need to know, and more.</span>
    </Title>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {articles.map(article => (
        <ArticleCard 
          title={article.data.title}
          image={article.data.image}
          date={article.data.date}
          summary={article.data.summary}
          tags={article.data.tags}
          href={ROUTES.articles.detail(article.slug)}
        />
      ))}
    </div>
    {articles.length === 0 && (
      <p class="text-green-200 mt-8">There are no articles.</p>
    )}
  </div>
</App>
