    <!-- Carosel -->
    <!-- Bracket -->
    <!-- Groups -->
    <!-- All Matches (Despegable) -->
    <div class="flex flex-col justify-center items-center p-6">
      {FC2022?.stages && FC2022.stages.map((stage) => (
        <div class="container mb-12">
          <h2 class="text-3xl text-center font-bold mb-6">{stage.name}</h2>
          
          {stage.type === 'group' ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              {stage.matches.map((match) => {
                return (
                <MatchCard 
                  match={match} 
                  participants={FC2022.participants}
                />
              )
            })}
            </div>
          ) : (
            <div class="flex flex-col space-y-6">
              {stage.matches.map((match) => {
                return (
                <MatchCard 
                  match={match} 
                  participants={FC2022.participants}
                  fullWidth
                />
              )})}
            </div>
          )}
        </div>
      ))
      }
    </div>
    <!-- Individual Results -->
    <!-- Overall Standings -->
    <!-- Other -->
    <!-- Tournaments -->
    <div class="flex justify-center p-6">
      <div class="container">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {FC2022 && (
            <div class="container flex flex-col justify-center items-center pt-6">
              <div class="mt-6">
                <h2 class="text-2xl font-bold">{FC2022.name}</h2>
                <p>Winner: {FC2022.winner}</p>
                <p>Runner-up: {FC2022.runner_up}</p>
              </div>
            </div>
          )}
