---
import { Image } from 'astro:assets';
const { headlines } = Astro.props;
---

<div class="w-full bg-gradient-to-b from-black/65 to-green-1000">
    <!-- Headlines -->
    <div class="w-full items-center flex justify-center p-6">
        <div class="2xl:max-w-10/12 flex h-full flex-col lg:flex-row justify-center items-stretch">
            <a href={headlines[0].link} target={headlines[0].noblank ? '_self' : '_blank'}
            class="relative overflow-hidden lg:rounded-tr-none rounded-t-2xl lg:rounded-l-2xl h-80 sm:h-1/2 sm:max-h-110 lg:h-auto lg:max-h-[577px] w-full group">
                <Image src={headlines[0].image} 
                    alt="Final Match" 
                    class="rounded-t-2xl lg:rounded-tr-none lg:rounded-l-2xl object-cover h-full group-hover:scale-105 2md:-translate-y-10 lg:-translate-y-0 group-hover:brightness-90 transition duration-300" 
                    loading="lazy"
                    width={1300}
                    quality={60}
                    format="webp"
                    />
                <div class="absolute inset-0 bg-gradient-to-tr from-green-950 from-15% to-40% to-transparent"></div>
                <div class="absolute bottom-2 sm:bottom-7 left-7 text-white">
                    <h2 class="text-2xl md:text-3xl lg:text-5xl font-bold text-shadow">{headlines[0].title}</h2>
                </div>
            </a>
        
            <!-- Panel derecho: Headlines -->
            <div class="bg-green-950 rounded-b-2xl lg:rounded-bl-none lg:rounded-r-2xl w-full h-full lg:max-w-sm px-4 py-2">
                <h2 class="text-xl font-bold text-white border-b pl-2 lg:pl-0 pb-2 border-green-600">Headlines</h2>
        
                <!-- Cada carta -->
                <div class="grid grid-custom-2 lg:grid-cols-1 h-full">
                    {headlines.slice(1).map((headline) => (
                        <div class="flex items-center justify-center h-full py-2 px-2 lg:px-0 border-b border-green-600 min-[860px]:nth-4:border-b-0 lg:nth-4:border-b last:border-b-0">
                            <a href={headline.link} target={headline.noblank ? '_blank' : '_self'} class="flex items-center justify-start w-full group">
                            <div class="h-13 w-[25%] min-w-23 sm:w-[45%] sm:h-22 xl:w-40% rounded-lg sm:rounded-2xl overflow-hidden flex-shrink-0">
                                <Image src={headline.image} quality={50} format="webp"
                                alt="All Goals" class={`h-full w-full object-cover group-hover:scale-110 transition duration-300 ${headline.class || ''}`} loading="lazy" width={200} />
                            </div>
                            <h2 class="text-md ms-4 text-white">{headline.title}</h2>
                            </a>
                        </div>
                    ))}
                </div>
            </div> 
        </div>
    </div>
</div>
