---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Article {
  title: string;
  url: string;
  image: ImageMetadata;
  description?: string; 
}

interface Props {
  articles: Article[];
}

const { articles } = Astro.props;

if (!articles || articles.length === 0) return null;

const mainArticle = articles[0];
const secondaryArticles = articles.slice(1, 6);
---

<section class="p-4 md:p-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 lg:grid-rows-2 gap-4 max-w-8xl mx-auto h-[calc(100svh-136px)]">
    <a href={mainArticle.url} class="group relative block lg:col-span-2 lg:row-span-2 rounded-lg overflow-hidden shadow-lg">
      <Image src={mainArticle.image} alt={mainArticle.title} class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105" 
      quality={80}
      height={480}
      />
      <div class="absolute inset-0 bg-gradient-to-t from-green-950/90 via-green-950/50 to-transparent"></div>
      <div class="absolute bottom-0 left-0 p-6 text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-2 text-shadow">
          {mainArticle.title}
        </h2>
        {mainArticle.description && (
          <p class="text-lg opacity-90 text-shadow">
            {mainArticle.description}
          </p>
        )}
      </div>
    </a>

    {secondaryArticles.map(article => (
      <a href={article.url} class="group relative block rounded-lg overflow-hidden shadow-lg h-full min-h-[200px]">
        <Image src={article.image} alt={article.title} class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105"
        quality={80}
        height={240}   
        format='webp'
      />
        <div class="absolute inset-0 bg-gradient-to-t from-green-950/80 via-green-950/40 to-transparent"></div>
        <div class="absolute bottom-0 left-0 p-4 text-white">
          <h3 class="text-xl font-bold text-shadow">
            {article.title}
          </h3>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .text-shadow {
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
  }
</style>