---
import Button from '@components/Button.astro';
import MatchCardDetailed from '@components/matches/MatchCardDetailed.astro';
import { ROUTES } from '@config/routes';

interface Props {
  lastMatches: any[];
  nextMatches: any[];
}

const { lastMatches, nextMatches } = Astro.props;
---

<div class="h-fit">
  <!-- <div class="text-center mb-6">
    <h2 class="text-4xl font-bold mb-4">Matches</h2>
    <p class="text-lg text-green-300 mb-6">Latest results & upcoming games</p>
  </div> -->

  {lastMatches.length > 0 && (
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-green-300 mb-4 flex items-center">
        <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
        Recent Results
      </h3>
      <div class="space-y-3">
        {lastMatches.map(match => (
          <MatchCardDetailed match={match} />
        ))}
      </div>
    </div>
  )}

  {nextMatches.length > 0 && (
    <div class="mb-6">
      <h3 class="text-lg font-semibold text-blue-300 mb-4 flex items-center">
        <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
        Upcoming Games
      </h3>
      <div class="space-y-3">
        {nextMatches.map(match => (
          <MatchCardDetailed match={match} />
        ))}
      </div>
    </div>
  )}

  {(nextMatches.length === 0 && nextMatches.length === 0) && (
    <div class="text-center py-8">
      <div class="text-4xl mb-4">⚽</div>
      <p class="text-green-400">No matches scheduled</p>
    </div>
  )}

  {/* Call to action para ver más partidos */}
  {(lastMatches.length > 0 || lastMatches.length > 0) && (
    <div class="text-center mt-8 pt-6 border-t border-green-700/30">
      {/* <a 
        href={ROUTES.matches.index} 
        class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-500 hover:to-green-600 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105"
      >
        View All Matches
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a> */}
      <Button link={ROUTES.matches.index}>View All Matches</Button>
    </div>
  )}
</div>