---
import MatchCardDetailed from '@components/matches/MatchCardDetailed.astro';

interface Props {
  lastMatches: any[];
  nextMatches: any[];
}

const { lastMatches, nextMatches } = Astro.props;
---

<div class="bg-gradient-to-b from-green-950/30 to-green-900/20 rounded-xl p-4 md:p-8 h-fit">
  <div class="text-center mb-6">
    <h2 class="text-2xl font-bold text-white mb-2">Matches</h2>
    <p class="text-green-300 text-sm">Latest results & upcoming games</p>
  </div>

  {lastMatches.length > 0 && (
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-green-300 mb-4 flex items-center">
        <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
        Recent Results
      </h3>
      <div class="space-y-3">
        {lastMatches.map(match => (
          <MatchCardDetailed match={match} />
        ))}
      </div>
    </div>
  )}

  {nextMatches.length > 0 && (
    <div class="mb-6">
      <h3 class="text-lg font-semibold text-blue-300 mb-4 flex items-center">
        <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
        Upcoming Games
      </h3>
      <div class="space-y-3">
        {nextMatches.map(match => (
          <MatchCardDetailed match={match} />
        ))}
      </div>
    </div>
  )}

  {(nextMatches.length === 0 && nextMatches.length === 0) && (
    <div class="text-center py-8">
      <div class="text-4xl mb-4">⚽</div>
      <p class="text-green-400">No matches scheduled</p>
    </div>
  )}

  {/* Call to action para ver más partidos */}
  {(lastMatches.length > 0 || lastMatches.length > 0) && (
    <div class="text-center pt-4 border-t border-green-700/30">
      <a 
        href="/matches" 
        class="inline-flex items-center text-green-300 hover:text-green-200 font-medium transition-colors duration-200"
      >
        View all matches
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  )}
</div>